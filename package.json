{
  "name": "monorepo-supergrid9k",
  "private": true,
 "workspaces": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "1.0.0",
  "devDependencies": {
    "npm-run-all": "4.1.5"
  },
  "dependencies": {
    "lerna": "^3.22.1",
    "typescript": "^4.0.2"
    },

  "scripts": {
    "run:client": "cd packages/client && yarn dev",
    "run:server": "cd packages/server && yarn dev",
    "run:all": "lerna run dev --parallel",
    "build":"lerna run build"
  }
}
